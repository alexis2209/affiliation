<div class="comments-article">
    <div class="clearfix"></div>
    <div class="article-title" id="comments">
        <div class="article-title">
            <h2>
                <span class="funky-font blue-tag">Comments</span>
                <span class="italic-font">Think About Customers</span>
            </h2>
        </div>
        <ol class="comments-box clearfix ">
            {% for comment in post.getComments() %}
                <li class="comment byuser comment-author-fruitthemes bypostauthor even thread-even depth-1" >
                    <article class="comment-body" >
                        <footer class="comment-meta">
                            <div class="comment-author vcard">
                                <b class="fn">{{ comment.getAuthor() }}</b> <span class="says">says:</span>
                            </div><!-- .comment-author -->

                            <div class="comment-metadata">
                                <a href="#">
                                    <time datetime="2015-01-19T09:37:32+00:00"> 9 Minutes Ago	</time>
                                </a>
                            </div><!-- .comment-metadata -->

                        </footer><!-- .comment-meta -->

                        <div class="comment-content">
                            <p>{{ comment.getContent()|raw }}</p>
                        </div><!-- .comment-content -->
                    </article>
                </li>
            {% endfor %}
        </ol>

        <div class="comment-respond" id="respond">
            <h3 class="comment-reply-title" id="reply-title">
                <span class="funky-font blue-tag">Leave</span>
                <span class="italic-font">a Comment</span>
            </h3>
            <form class="comment-form row">
                <div class="col-md-6">
                    <p class="comment-form-author">
                        <label >Name <span class="required">*</span></label>
                        <input type="text"  size="30"  name="author" id="author"  required="required" placeholder="Name *">
                    </p>
                    <p class="comment-form-email">
                        <label >Email <span class="required">*</span></label>
                        <input type="email"  size="30"  name="email" required="required"  placeholder="Email Id *"></p>
                    <p class="comment-form-subject">
                        <label>subject</label>
                        <input type="text" size="30"  name="subject" id="subject"  placeholder="subject">
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="comment-form-comment">
                        <label>Comment</label>
                        <textarea  rows="5" cols="45" name="comment" id="comment" placeholder="Comment Text"></textarea>
                    </p>
                </div>
                <div class="form-submit col-md-12">
                    <button class="blue-btn btn" type="Submit">Submit</button>
                    <input type="hidden" id="comment_post_ID" value="17" name="comment_post_ID">
                    <input type="hidden" value="0" id="comment_parent" name="comment_parent">
                </div>
            </form>
        </div><!-- #respond -->
    </div>
</div>